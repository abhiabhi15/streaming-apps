extends layout
mixin metric(id1, id2,title,footer)
	div(class="panel panel-default",id="#{id}-metric" )
		if title
			div.panel-heading: h3.panel-title= title
		div(class="panel-body metric")
			h3(id="#{id1}",style="color:blue")= "TBD"
			h3(id="#{id2}",style="color:green")= "TBD"
		if footer
			div.panel-footer= footer

block styles
// link(rel='stylesheet',href='/stylesheets/dashboard.css')

block scripts
	// enable socket.io communication on the client-side
	script(src='/socket.io/socket.io.js')
	script(src='/javascripts/ping-pong.js')

block content
	div(class="container")
		div.page-header: h1 Ping-Pong Table
		div(class="row")
			div(class = "row")
				div(class="col-lg-5")
					+metric("ss-message","cr-message","Server Message Viewer","Messages")
				div(class="col-lg-5")
					+metric("cs-message","sr-message","Client Message Viewer","Messages")
					button(class="btn btn-primary" id="ping") Client Ping

